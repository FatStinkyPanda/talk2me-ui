# Production Environment Configuration
# IMPORTANT: Change all default values before deploying to production

# Application Settings
APP_ENV=production
LOG_LEVEL=INFO
DEBUG=false

# Server Configuration
HOST=0.0.0.0
PORT=8000
WORKERS=4

# Database Configuration (if needed)
# DATABASE_URL=postgresql://user:password@host:5432/dbname

# External API Configuration
# TALK2ME_API_URL=https://api.talk2me.com
# TALK2ME_API_KEY=your-production-api-key

# Security Settings (CHANGE THESE!)
SECRET_KEY=change-this-to-a-secure-random-key-in-production
ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com

# File Upload Settings
MAX_FILE_SIZE=52428800
UPLOAD_DIR=data/uploads

# CORS Settings
CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# Session Settings (CHANGE THIS!)
SESSION_SECRET=change-this-to-a-secure-random-session-key

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090

# SSL/TLS (if using HTTPS)
# SSL_CERT_PATH=/path/to/ssl/cert.pem
# SSL_KEY_PATH=/path/to/ssl/private.key

# Logging
LOG_FILE=logs/app.log
LOG_MAX_SIZE=10485760
LOG_BACKUP_COUNT=5

# Performance
MAX_REQUESTS_PER_WORKER=1000
WORKER_TIMEOUT=30
GRACEFUL_TIMEOUT=10

# Health Checks
HEALTH_CHECK_INTERVAL=30

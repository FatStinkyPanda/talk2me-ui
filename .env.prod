# Talk2Me UI Production Environment Configuration
# Copy this file to .env.dev (development) or .env.prod (production) and customize the values
# Never commit actual .env files to version control - they contain sensitive information

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================

# Environment type (development, production, staging)
APP_ENV=production

# Logging level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Enable debug mode (true/false) - should be false in production
DEBUG=false

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================

# Server host address
HOST=0.0.0.0

# Server port number
PORT=8000

# Number of worker processes (1 for dev, 4+ for prod)
WORKERS=4

# =============================================================================
# DATABASE CONFIGURATION (Optional)
# =============================================================================

# Database connection URL (leave commented if not using database)
# DATABASE_URL=sqlite:///app.db
# DATABASE_URL=postgresql://user:placeholder@host:5432/dbname

# =============================================================================
# EXTERNAL API CONFIGURATION
# =============================================================================

# Talk2Me backend API base URL
# TALK2ME_API_URL=http://localhost:8001
TALK2ME_API_URL=https://api.talk2me.com

# Talk2Me backend API key (keep secret!)
# TALK2ME_API_KEY=your-api-key-here

# =============================================================================
# SECURITY SETTINGS
# =============================================================================

# Secret key for session encryption and security (CHANGE THIS!)
# Generate a secure random key: python -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=a0a555b2412f80bbecccce7c4c17b9f4787b42dae09d06eaf4f3eadcf5973698

# Comma-separated list of allowed hostnames/domains
ALLOWED_HOSTS=yourdomain.com

# =============================================================================
# FILE UPLOAD SETTINGS
# =============================================================================

# Maximum file size in bytes (50MB default)
MAX_FILE_SIZE=52428800

# Directory for file uploads (relative to project root)
UPLOAD_DIR=data/uploads

# =============================================================================
# CORS SETTINGS
# =============================================================================

# Comma-separated list of allowed origins for CORS
CORS_ORIGINS=https://yourdomain.com

# =============================================================================
# SESSION SETTINGS
# =============================================================================

# Secret key for session management (CHANGE THIS!)
# Generate a secure random key: python -c "import secrets; print(secrets.token_hex(32))"
SESSION_SECRET=f3f09a7bbb4916f6d0454362c049f1ae302a6dd6d9941d26c4460e5e35292c82

# =============================================================================
# MONITORING AND METRICS
# =============================================================================

# Enable Prometheus metrics collection (true/false)
ENABLE_METRICS=true

# Port for metrics endpoint
METRICS_PORT=9090

# =============================================================================
# SSL/TLS CONFIGURATION (Production HTTPS)
# =============================================================================

# Path to SSL certificate file (for HTTPS)
SSL_CERT_PATH=/etc/letsencrypt/live/yourdomain.com/fullchain.pem

# Path to SSL private key file (for HTTPS)
SSL_KEY_PATH=/etc/letsencrypt/live/yourdomain.com/privkey.pem

# =============================================================================
# DOMAIN CONFIGURATION (for SSL/certbot)
# =============================================================================

# Domain name for SSL certificate generation
DOMAIN=yourdomain.com

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================

# Log file path (leave empty for console-only logging)
LOG_FILE=logs/app.log

# Maximum log file size in bytes (10MB default)
LOG_MAX_SIZE=10485760

# Number of backup log files to keep
LOG_BACKUP_COUNT=5

# =============================================================================
# PERFORMANCE TUNING
# =============================================================================

# Maximum requests per worker before restart
MAX_REQUESTS_PER_WORKER=1000

# Worker timeout in seconds
WORKER_TIMEOUT=30

# Graceful shutdown timeout in seconds
GRACEFUL_TIMEOUT=10

# =============================================================================
# HEALTH CHECKS
# =============================================================================

# Health check interval in seconds
HEALTH_CHECK_INTERVAL=30

# =============================================================================
# BACKUP CONFIGURATION
# =============================================================================

# Backup remote storage type (s3, scp, ftp, or leave empty for local only)
BACKUP_REMOTE_TYPE=s3

# Remote backup host (for scp/ftp)
# BACKUP_REMOTE_HOST=backup.example.com

# Remote backup username (for scp/ftp)
# BACKUP_REMOTE_USER=backupuser

# Remote backup path (for scp/ftp)
# BACKUP_REMOTE_PATH=/backups/talk2me

# S3 bucket name (for s3 backup)
BACKUP_S3_BUCKET=my-talk2me-backups

# AWS S3 region (for s3 backup)
BACKUP_S3_REGION=us-east-1

# Number of daily backups to retain
DAILY_RETENTION=7

# Number of weekly backups to retain
WEEKLY_RETENTION=4

# Number of monthly backups to retain
MONTHLY_RETENTION=12

# =============================================================================
# DEVELOPMENT-SPECIFIC SETTINGS
# =============================================================================
# These settings are typically only used in development environments

# Enable hot reload (development only)
# RELOAD=true

# Additional directories to watch for reload (development only)
# RELOAD_DIRS=src,config

# =============================================================================
# NOTES
# =============================================================================
#
# Security Best Practices:
# - Never commit .env files to version control
# - Use strong, randomly generated secrets for SECRET_KEY and SESSION_SECRET
# - In production, use HTTPS and set DEBUG=false
# - Restrict ALLOWED_HOSTS to your actual domains
# - Use environment-specific values (dev vs prod)
#
# Backup Recommendations:
# - Configure backup settings for production deployments
# - Test backup and restore procedures regularly
# - Store backups in secure, off-site locations
#
# Monitoring:
# - Enable metrics in production (ENABLE_METRICS=true)
# - Set up proper log aggregation and monitoring
# - Configure alerts for critical errors
